<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".huacaUnmsm">

    <TextView
        android:id="@+id/tituloHuaca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text="@string/TituloHuaca"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ViewFlipper
        android:id="@+id/flipper_huaca"
        android:layout_width="371dp"
        android:layout_height="163dp"
        android:layout_marginBottom="48dp"
        app:layout_constraintBottom_toTopOf="@+id/cuerpoHuaca"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloHuaca">
    </ViewFlipper>

    <TextView
        android:id="@+id/cuerpoHuaca"
        android:layout_width="352dp"
        android:layout_height="250dp"
        android:layout_marginBottom="68dp"
        android:fontFamily="sans-serif-medium"
        android:orientation="vertical"
        android:text="@string/CuerpoHuaca"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/HuacaAVozPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/cuerpoHuaca"
        app:layout_constraintEnd_toStartOf="@+id/HuacaAVozStop"
        app:layout_constraintHorizontal_bias="0.684"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flipper_huaca"
        app:srcCompat="@android:drawable/ic_media_play" />

    <ImageButton
        android:id="@+id/HuacaAVozStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="112dp"
        app:layout_constraintBottom_toTopOf="@+id/cuerpoHuaca"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flipper_huaca"
        app:srcCompat="@android:drawable/ic_media_pause" />


</androidx.constraintlayout.widget.ConstraintLayout>